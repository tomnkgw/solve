    <main style="background: #f4f8fa;">
      <div class="container">
        <div class="row">
          <div class="col-md-2 d-none d-lg-block">
            <nav class="navbar navbar-light">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <%= link_to "マイページ", user_path(current_user), class:"nav-link py-1 pl-4"%>  
                </li>
                <li class="nav-item"><a href="" class="nav-link py-1 pl-4">メッセージ</a></li>
                <li class="nav-item"><a href="" class="nav-link py-1 pl-4">お気に入り</a></li>
                <li class="nav-item"><a href="" class="nav-link py-1 pl-4">設定</a></li>
                <li class="nav-item">ログアウト</li>
              </ul>
            </nav>  
          </div>
          <div class="col-md-10">
            <h2 class="text-center my-4">募集中の依頼</h2>
            <div class="input-group mx-auto my-5" style="width: 80%;">
              <input type="text" class="form-control" placeholder="キーワードを入力してください">
              <span class="input-group-btn">
                <button type="button" class="btn btn-default">ボタン</button>
              </span>
            </div>
            
            <div class="row ">
            <% @requests.each do |request| %>
              <div class="col-md-6">
                <div class="card w-75 mx-auto my-3">
                  <div class="card-body">
                  <%= link_to request_path(request) do %>
                    <h5 class="card-title"><%= request.title %></h5>
                  <% end %>
                    <h6 class="card-subtitle mb-2 text-muted"><%= request.user.username %></h6>
                    <p class="card-text small"><%= request.text %> </p>
                    <div style="background: #43acff;">
                      <p class="card-text small py-1 px-1 mb-1" style="color: white;">予算：<%= request.budget %></p>
                    </div>
                    <div style="background: #43acff;">
                      <p class="card-text small py-1 px-1" style="color: white;">提案数：◯◯</p>
                    </div>
                    <div style="background: #43acff;">
                      <p class="card-text small py-1 px-1" style="color: white;">お気に入り：
                      <% if current_user.already_favorited?(request) %>
                        <%= link_to 'いいねを外す', request_favorite_path(request), method: :delete %>
                        <% else %>
                        <%= link_to "いいね",request_favorites_path(request), method: :post %>
                      <% end %>
                      <%= request.favorites.count %>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
            
          </div>
        </div>
      </div>
    </main>