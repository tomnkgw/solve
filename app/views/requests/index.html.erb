    <main style="background: #f4f8fa;">
      <div class="container py-5">
            <h2 class="text-center pb-4">募集中の依頼</h2>
            <div class="input-group mx-auto mb-5" style="width: 80%;">
              <input type="text" class="form-control" placeholder="キーワードを入力してください">
              <span class="input-group-btn">
                <button type="button" class="btn btn-default">ボタン</button>
              </span>
            </div>
            
            <div class="row ">
            <% @requests.each do |request| %>
              <div class="col-md-6">
                <div class="card w-75 mx-auto my-3">
                  <div class="card-body">
                  <%= link_to request_path(request) do %>
                      <h5 class="card-title textOverflow"><%= request.title %></h5>
                  <% end %>
                    <h6 class="card-subtitle mb-2 text-muted"><%= request.user.username %></h6>
                    <div style="background: #43acff;">
                      <p class="card-text small py-1 px-1 mb-1" style="color: white;">予算：<%= request.budget %></p>
                    </div>
                    <div style="background: #43acff;">
                      <p class="card-text small py-1 px-1 mb-1" style="color: white;">提案数：<%= request.proposals.count %></p>
                    </div>
                    <div class="text-right">
                      <% if current_user.already_favorited?(request) %>
                        <% favorite = current_user.favorites.find_by(request_id: request.id) %>
                        <%= link_to  request_favorite_path(request, favorite), method: :delete do %>
                          <i class="fas fa-heart"></i>
                          <%= request.favorites.count %>
                        <% end %>
                        <% else %>
                        <%= link_to request_favorites_path(request), method: :post do%>
                        <i class="far fa-heart"></i>
                        <%= request.favorites.count %>
                        <% end %>
                      <% end %>
                      
                    </div>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
      </div>
    </main>