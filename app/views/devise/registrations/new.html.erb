  <div id="login">
    <h3 class="text-center text-white">SOLVE</h3>
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6 px-3 py-3" style="background: #f4f8fa;" >
                <div id="login-box" class="col-md-12">
                  <h1 class="text-center text-info pb-3">新規登録</h1>
                  
                  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    <%= render "devise/shared/error_messages", resource: resource %>
                    
                    <div class="field py-3">
                      <%= f.label :username, class:"text-info" %><br />
                        <%= f.text_field :username, autofocus: true, autocomplete: "email", class:"w-100" %>
                    </div>
                    
                    <div class="field py-3">
                      <%= f.label :email , class:"text-info"%><br />
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-100" %>
                    </div>
                    
                    <div class="field py-3">
                      <%= f.label :password , class:"text-info"%>
                      <%= f.password_field :password, autocomplete: "new-password", class:"w-100" %>
                    </div>
                  
                    <div class="field py-3">
                      <%= f.label :password_confirmation , class:"text-info"%><br />
                      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "w-100" %>
                    </div>
                    
                    <div class="actions text-center">
                      <%= f.submit "新規登録する" ,class:"btn btn-info"%><br />
                      <%= render "devise/shared/links" %>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
    </div>
</div>

