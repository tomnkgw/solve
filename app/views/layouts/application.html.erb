<!DOCTYPE html>
<html>
  <head>
    <title>Solve</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/d53d95315b.js" crossorigin="anonymous"></script>
  </head>

  <body>
  <% if flash[:notice] %>
    <div class="notification">
      <p class="notice"><%= notice %></p>
    </div>  
  <% end %>
  <% if flash[:alert] %>
    <div class="notification">
      <p class="alert"><%= alert %></p>
    </div>
  <% end %>
    
  <% if user_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light px-4 py-3">
        <div class="mr-auto">
          <%= link_to "LOGO", root_path ,class:"navbar-brand"%>
        </div>
        <div>
          <button class="navbar-toggler">
            <span class="navbar-toggler-icon" data-toggle="collapse" data-target="#menu"></span>
          </button>
          <div id="menu" class="collapse navbar-collapse">
            <ul class="navbar-nav">
              <li class="nav-item"><a href="" class="nav-link">ご利用ガイド</a></li>
              <li class="nav-item">
                <%= link_to "依頼をする", new_request_path, class:"nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "依頼を受ける", requests_path, class:"nav-link"%>
              </li>
              <li class="nav-item"><a href="" class="nav-link">お気に入り</a></li>
              <li class="nav-item"><a href="" class="nav-link">メッセージ</a></li>
              <li class="nav-item">
                <%= link_to "プロフィール", user_path(current_user), class:"nav-link"%>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete ,class:"nav-link"%>
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  <% else %>
    <header>
      <nav class="navbar navbar-expand-sm navbar-light px-4 py-3">
        <div class="mr-auto">
          <a href="" class="navbar-brand">LOGO</a>
        </div>
        <div>
          <button class="navbar-toggler">
            <span class="navbar-toggler-icon" data-toggle="collapse" data-target="#menu"></span>
          </button>
          <div id="menu" class="collapse navbar-collapse">
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path, class:"nav-link"%>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path, class:"nav-link"%>
              </li>
            </ul>
          </div>
        </div>
      </nav>
  </header>
  <% end %>
  <%= yield %>
  <footer>
    <div class="container">
      <nav class="navbar navbar-light">
        <ul class="navbar-nav">
          <li class="nav-item"><a href="" class="nav-link py-0">ご利用ガイド</a></li>
          <li class="nav-item">
            <%= link_to "利用規約", kiyaku_path, class:"nav-link py-0"%>
          </li>
          <li class="nav-item">
            <%= link_to "特定商取引に基づく表記", tokutei_path, class:"nav-link py-0"%>        
          </li>
          <li class="nav-item">
            <%= link_to "プライバシーポリシー", privacy_path, class:"nav-link py-0"%>
          </li>
          <li class="nav-item">
            <%= link_to "お問い合わせ", contact_path, class:"nav-link py-0"%>
          </li>
        </ul>
      </nav>
    </div>
  </footer>

    <!-- Optional JavaScript -->
    <!-- Popper.js first, then Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js" integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/" crossorigin="anonymous"></script>
  </body>
</html>
